<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:paddingHorizontal="23dp"
            android:paddingVertical="5dp"
            android:gravity="bottom|end"
            />
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/nestedScrollView"
        app:layout_constraintBottom_toTopOf="@id/consNumPad"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consNumPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/btnRestore"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:padding="10dp"
            android:src="@drawable/ic_restore_24"
            app:layout_constraintTop_toTopOf="@id/btnZero"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnZero"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="0"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/btnRestore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnPoint"
            />

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="."
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/btnZero"
            app:layout_constraintRight_toLeftOf="@id/linearEquals"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:id="@+id/linearEquals"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/btnPoint"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <ImageView
                android:id="@+id/btnEquals"
                android:layout_width="@dimen/heightOfButtons"
                android:layout_height="@dimen/heightOfButtons"
                android:src="@drawable/ic_equals"
                android:background="@drawable/bg_equals"
                android:padding="10dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="1"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnRestore"
            app:layout_constraintRight_toLeftOf="@id/btnTwo"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="2"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnZero"
            app:layout_constraintLeft_toRightOf="@id/btnOne"
            app:layout_constraintRight_toLeftOf="@id/btnThree"
            />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="3"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnRestore"
            app:layout_constraintLeft_toRightOf="@id/btnTwo"
            app:layout_constraintRight_toLeftOf="@id/btnAdd"
            />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:src="@drawable/ic_add_24"
            android:padding="@dimen/paddingOfButton"
            app:layout_constraintLeft_toRightOf="@id/btnThree"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnRestore"
            />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="4"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnOne"
            app:layout_constraintRight_toLeftOf="@id/btnFive"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="5"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnOne"
            app:layout_constraintLeft_toRightOf="@id/btnFour"
            app:layout_constraintRight_toLeftOf="@id/btnThree"
            />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="6"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnOne"
            app:layout_constraintLeft_toRightOf="@id/btnFive"
            app:layout_constraintRight_toLeftOf="@id/btnSubtract"
            />

        <ImageView
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:src="@drawable/ic_minus"
            android:padding="@dimen/paddingOfButton"
            app:layout_constraintLeft_toRightOf="@id/btnSix"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnOne"
            />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="7"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnFour"
            app:layout_constraintRight_toLeftOf="@id/btnEight"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="8"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnFour"
            app:layout_constraintLeft_toRightOf="@id/btnSeven"
            app:layout_constraintRight_toLeftOf="@id/btnNine"
            />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="9"
            android:textSize="@dimen/sizeOfButtonText"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/btnFour"
            app:layout_constraintLeft_toRightOf="@id/btnEight"
            app:layout_constraintRight_toLeftOf="@id/btnMultiply"
            />

        <ImageView
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:src="@drawable/ic_multiply_24"
            android:padding="@dimen/paddingOfButton"
            app:layout_constraintLeft_toRightOf="@id/btnNine"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnFour"
            />

        <Button
            android:id="@+id/allClear"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="AC"
            android:textSize="22sp"
            android:textColor="@color/colorOrange"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnBackspace"
            app:layout_constraintBottom_toTopOf="@id/btnSeven"
            />

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:src="@drawable/ic_clear"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/allClear"
            app:layout_constraintRight_toLeftOf="@id/btnPercentage"
            app:layout_constraintBottom_toTopOf="@id/btnSeven"
            />

        <Button
            android:id="@+id/btnPercentage"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:text="%"
            android:textSize="24sp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/btnBackspace"
            app:layout_constraintRight_toLeftOf="@id/btnDivide"
            app:layout_constraintBottom_toTopOf="@id/btnSeven"
            />

        <ImageView
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightOfButtons"
            android:src="@drawable/ic_division"
            android:padding="20dp"
            app:layout_constraintLeft_toRightOf="@id/btnPercentage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnSeven"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>